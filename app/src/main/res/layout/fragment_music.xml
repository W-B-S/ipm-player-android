<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ipm.ipm.module.main.music.MusicFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y106">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x30"
            android:textColor="#212832"
            android:text="我的音乐"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:textColor="#212832"
            android:text="我喜欢"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:text="5"
            android:drawablePadding="@dimen/x35"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:textColor="#212832"
            android:text="最近播放"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:text="0"
            android:drawablePadding="@dimen/x35"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:textColor="#212832"
            android:text="全部音乐"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:text="0"
            android:drawablePadding="@dimen/x35"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y26"
        android:background="#F4F6F6"/>
    <LinearLayout
        android:layout_marginTop="@dimen/y40"
        android:layout_marginBottom="@dimen/y20"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mine_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x30"
            android:textColor="#212832"
            android:text="我创建的"/>
        <View
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#212832"/>
        <TextView
            android:id="@+id/tv_mine_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x30"
            android:textColor="#A9B1BD"
            android:text="我关注的"/>
    </LinearLayout>
    <com.ipm.uilibrary.widget.NoScrollViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
