<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x32"
    android:paddingRight="@dimen/x32"
    tools:context="com.ipm.ipm.module.minecreate.MineCreateFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#99A0AA"
            android:textSize="@dimen/x24"
            android:text="0个歌单"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/x27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/song_sheet_create_ic"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/song_sheet_manag_ic"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/add"
            android:layout_width="@dimen/x134"
            app:cardBackgroundColor="#A9B1BD"
            app:cardCornerRadius="4dp"
            android:layout_height="@dimen/x134">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/song_sheet_add_ic"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_toRightOf="@id/add"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x27"
            android:layout_height="wrap_content"
            android:textColor="#212832"
            android:textSize="@dimen/x30"
            android:text="新建歌单"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/in_ic"/>
    </RelativeLayout>

</LinearLayout>
