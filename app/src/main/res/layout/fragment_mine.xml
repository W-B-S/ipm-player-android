<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ipm.ipm.module.main.mine.MineFragment">

    <com.ipm.ipm.widget.CircleImageView
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_marginTop="@dimen/y72"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_marginTop="@dimen/y26"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x40"
        android:textColor="#212832"
        android:text="IPM"/>
    <View
        android:layout_marginTop="@dimen/y38"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y26"
        android:background="#F4F6F6"/>
    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:drawablePadding="@dimen/x28"
            android:drawableLeft="@drawable/mine_jifen_ic"
            android:textColor="#212832"
            android:text="积分"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x40"
            android:text="15"
            android:drawablePadding="@dimen/x28"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:drawablePadding="@dimen/x28"
            android:drawableLeft="@drawable/mine_setting_ic"
            android:textColor="#212832"
            android:text="设置"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x40"
            android:drawablePadding="@dimen/x28"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y26"
        android:background="#F4F6F6"/>
    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:drawablePadding="@dimen/x28"
            android:drawableLeft="@drawable/mine_share_ic"
            android:textColor="#212832"
            android:text="分享IPM"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x40"
            android:drawablePadding="@dimen/x28"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x32"
            android:drawablePadding="@dimen/x28"
            android:drawableLeft="@drawable/mine_about_ic"
            android:textColor="#212832"
            android:text="关于IPM"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x40"
            android:drawablePadding="@dimen/x28"
            android:drawableRight="@drawable/in_ic"
            android:layout_alignParentRight="true"
            android:textColor="#212832"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F6F6"/>


</LinearLayout>
